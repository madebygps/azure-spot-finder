{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Run FastAPI Server",
			"type": "shell",
			"command": "uv run uvicorn api.main:app --reload --port 8000",
			"isBackground": true,
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "new",
				"showReuseMessage": true,
				"clear": false
			}
		},
		{
			"label": "uv sync",
			"type": "shell",
			"command": "uv sync",
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			}
		},
		{
			"label": "Install Dependencies",
			"type": "shell",
			"command": "uv venv && uv sync",
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			}
		}
	]
}
